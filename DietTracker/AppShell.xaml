<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DietTracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DietTracker"
    xmlns:views="clr-namespace:DietTracker.Views">
    
    
    <TabBar>
        <ShellContent
            Title="Today"
            ContentTemplate="{DataTemplate views:TodayView}"
            Route="Today" />
        <ShellContent
            Title="Yesterday"
            ContentTemplate="{DataTemplate views:YesterdayView}"
            Route="Yesterday" />
        <ShellContent
            Title="Summary"
            ContentTemplate="{DataTemplate views:SummaryView}"
            Route="Summary"/>
    </TabBar>

</Shell>
